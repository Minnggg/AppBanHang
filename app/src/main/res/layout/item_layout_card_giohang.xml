<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4FAFF"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewAnh"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgAnhSanPham"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_100sdp"
                android:foregroundGravity="center"
                android:scaleType="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvItemTenSanPham"
            android:maxLines="2"
            android:minLines="2"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/cardviewAnh"
            app:layout_constraintTop_toTopOf="@id/cardviewAnh"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"/>
        <TextView
            android:id="@+id/tvItemGiaSanPham"
            android:maxLines="1"
            android:minLines="1"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:text="giá sản phẩm"
            app:layout_constraintLeft_toRightOf="@id/cardviewAnh"
            app:layout_constraintTop_toBottomOf="@id/tvItemTenSanPham"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"/>

        <LinearLayout
            android:layout_marginRight="@dimen/_20sdp"
            android:weightSum="5"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tvItemGiaSanPham"
            app:layout_constraintLeft_toRightOf="@id/cardviewAnh"
            android:id="@+id/lnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="2"
                android:textSize="@dimen/_15ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"/>

            <ImageButton
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/item_btnTru"
                android:background="@drawable/minus_button"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                />
            <TextView
                android:id="@+id/item_tvSoLuong"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <ImageButton
                android:id="@+id/item_btnCong"
                android:background="@drawable/add"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_thanhtien"
            android:textSize="@dimen/_15ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành tiền :"
            app:layout_constraintTop_toBottomOf="@id/cardviewAnh"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>